<form method="post" action="/movies/create">

<h2>Create a movie</h2>

  <input type="text" name="title" placeholder="movie's title" />
  <input type="text" name="genre" placeholder="movie's genre" />
  <input type="text" name="plot" placeholder="movie's plot" />
  <select name="cast" multiple>
    {{#each celebrities}} 
    <option value={{this._id}}>{{name}}</option>
    {{/each}}
  </select>

    <button>Submit</button>
</form>
